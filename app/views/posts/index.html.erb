<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-9">
    <p class="pull-right visible-xs">
      <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
    </p>
    <div class="jumbotron">
      <%= gmaps4rails(@pins) %>
    </div>
    
    <div class="row">
      <div class="col-lg-12">
      <!--div class="col-6 col-sm-6 col-lg-4"-->

      <% @posts.each_with_index do |post, index| %>
        <div class="post-tile">
          <div id="tile-<%= index+1 %>" class="<%= index%2==0 ? 'tile-left' : '' %>">
            <h3><%= post.location.city %></h2>
            <h4><%= post.location.country %></h4>
          </div>

          <div class="tile-content">
            <h4><%= post.title %></h4>
            <p><%= post.snippet(post.body) %></p>
            <p><%= link_to 'Continue reading &raquo;'.html_safe, post, { class:"btn btn-default" } %></p>
          </div>
        </div>
      <% end %>

      </div><!--/span-->
    </div><!--/row-->
  </div><!--/span-->

  <%= render partial: 'layouts/sidebar' %>
  
</div><!--/row-->

      <hr>




<%= yield :scripts %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Starred</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @all_posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.location.address %></td>
        <td><%= post.starred %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

