<% provide(:title, "Edit Photo") %>
<div class="page_header"><h1>Edit Photo</h1></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_for([@post.user, @post, @photo], html: {class:"form-horizontal", role:"form"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <div class="col-md-12">
        <%= image_tag @photo.image_url(:medium) %>
        <%= f.hidden_field :image, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12">
        <%= f.text_field :caption, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
        <div class="checkbox">
          <label>
            <%= f.check_box :cover_photo, {}, "true", "false" %> Use as Cover Photo for Post
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <%= link_to "Cancel", user_post_photos_path(@post.user, @post), {class: "btn btn-primary", "data-no-turbolink" => true} %>
      </div>
    </div>
  <% end %>

  </div>
</div>