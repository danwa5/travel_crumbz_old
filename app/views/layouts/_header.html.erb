<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Travel Crumbz", root_path, {class: "navbar-brand", "data-no-turbolink" => true} %>
    </div>
    <div class="collapse navbar-collapse bs-js-navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to '<span class="glyphicon glyphicon-home"></span> Home'.html_safe, user_posts_path(@current_user), {"data-no-turbolink" => true} %></li>
        <li><%= link_to '<span class="glyphicon glyphicon-link"></span> Friends'.html_safe, users_path %></li>
        <li><%= link_to '<span class="glyphicon glyphicon-picture"></span> Gallery'.html_safe, '#' %></li>
